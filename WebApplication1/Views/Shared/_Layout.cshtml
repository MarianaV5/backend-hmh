                    </ul>
                </div>
                <div class="footer-content">
                    <h3>Follow Us</h3>
                    <ul class="social-icons">
                        <li><a href=""><img src="facebook.png" style="width: 32px;"></i></a></li>
                        <li><a href=""><img src="twitter.png" style="width: 32px;"></i></a></li>
                        <li><a href=""><img src="instagram.png" style="width: 32px;"></i></a></li>
                        <li><a href=""><img src="linkedin.png" style="width: 32px;"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="bottom-bar">
                <p>&copy; 2023 your company . All rights reserved</p>
            </div>
        </footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
